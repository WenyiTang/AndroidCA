<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/brain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/selectImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY"
        />

    <Button
        android:id="@+id/selectImage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideBtn"
        android:layout_marginTop="350dp"
        android:text="@string/play_btn"/>

    <Button
        android:id="@+id/guideBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectImage"
        app:layout_constraintBottom_toTopOf="@id/leaderboardBtn"
        android:text="@string/guide_btn"/>

    <Button
        android:id="@+id/leaderboardBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="150dp"
        android:text="Leaderboard"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/diffPopup"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="#03A9F4"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/selectdiff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_diff"
            android:gravity="center"
            android:padding="40dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@id/normalBtn"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/normalBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/normal_diff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/hardBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/hard_diff"
            app:layout_constraintBottom_toTopOf="@id/cancel_diff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/normalBtn" />

        <Button
            android:id="@+id/cancel_diff"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel_diff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hardBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
